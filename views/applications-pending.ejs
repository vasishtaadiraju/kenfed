                    buttonsStyling: false,
                    confirmButtonText: "Ok",
                    customClass: {
                      confirmButton: "btn font-weight-bold btn-light-primary"
                    }
                  }).then(function() {
                    location.replace("/applications?id="+id);
                  });
                }
                else
                {
                  swal.fire({
                    text: "Something went wrong.Please try again later",
                    icon: "error",
                    buttonsStyling: false,
                    confirmButtonText: "Ok",
                    customClass: {
                      confirmButton: "btn font-weight-bold btn-light-primary"
                    }
                  });
                }
                
              },
              error(){
                console.log('Error');
              }
            });

          }
          function getMembers(id)
          {
            console.log("get members");
            $.ajax({
              type: 'GET',
              dataType:"json",
              contentType: 'application/json',
              url: '/api/user/profile/list',
              success: function (data, status, xhr) {
                console.log('data: ', data);
                if(data.status=='success')
                {     
                  var tablehtml='';          
                  for(var i=0;i<data.members.length;i++)
                  {
                    console.log(data.members[i]);
                    tablehtml+='<tr>';
                    tablehtml+='<th scope="row" style="text-align: center;"><a href="/appinternal?id='+id+'&member='+data.members[i].userid+'">'+data.members[i].id+'</a></th>';
                    tablehtml+='<td style="text-align: center;">'+data.members[i].username+'</td>';
                    tablehtml+='<td style="text-align: center;"><img src="https://nextelone.com/erpp/testing//assets/dist/img/user_img.png" alt="employee-image" width="50%"></td>';
                    tablehtml+='<td style="text-align: center;">'+data.members[i].email+'</td>';
                    tablehtml+='<td style="text-align: center;">'+data.members[i].mobileno+'</td>';
                    tablehtml+='<td style="text-align: center;">'+data.members[i].organisation+'</td>';
                    tablehtml+='<td style="text-align: center;">'+data.members[i].location+'</td>';
                    tablehtml+='<td style="text-align: center;"><span class="label label-inline label-light-success font-weight-bold">'+data.members[i].status+'</span>';
