        <script>
          function verifyMember(member,id)
          {
            console.log("verify member "+member+" : "+id);
            var postdata={"member":member,"status":"VERIFIED"};
            
            $.ajax({
              type: 'POST',
              data: JSON.stringify(postdata),
              dataType: 'json',
              contentType: 'application/json',
              url: '/api/user/profile/status/update',
              success: function (data, status, xhr) {
                console.log('data: ', data);
                if(data.status=='success')
                {
                  swal.fire({
                    text: "Member verified successfully.",
                    icon: "success",
                    buttonsStyling: false,
                    confirmButtonText: "Ok",
                    customClass: {
                      confirmButton: "btn font-weight-bold btn-light-primary"
                    }
                  }).then(function() {
                    location.replace("/applications?id="+id);
                  });
                }
                else
                {
                  swal.fire({
                    text: "Something went wrong.Please try again later",
                    icon: "error",
                    buttonsStyling: false,
                    confirmButtonText: "Ok",
                    customClass: {
                      confirmButton: "btn font-weight-bold btn-light-primary"
                    }
                  });
                }
                
              },
              error(){
                console.log('Error');
              }
            });

          }
